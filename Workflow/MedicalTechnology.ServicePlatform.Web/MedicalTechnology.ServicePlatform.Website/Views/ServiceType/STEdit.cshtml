@model MedicalTechnology.ServicePlatform.Website.Models.ServiceTypeViewModel
@{
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

@Styles.Render("~/Content/main/css")
<script src="~/Scripts/SketchMap.js"></script>
<div>
    <div class="divtitle divtitle-common">
        <p class="titleinfo serverlist">服务类型</p><div class="divcontrolsw"><img src="~/Content/images/素材01 (18).png" /></div>
    </div>
    <div class="divServiceCommon">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="divServerInnerDivCommon" style="text-align: left; ">
                <div class="myform-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ServerType.ID)
                    <div class="myform-group">
                        <div class="mygroupcol">
                            @Html.LabelFor(model => model.ServerType.Name, htmlAttributes: new { @class = "mylabel" })
                        </div>
                        <div class="mygroupcol">
                            @Html.EditorFor(model => model.ServerType.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="mygroupcol">
                            @Html.ValidationMessageFor(model => model.ServerType.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="myform-group">
                        <div class="mygroupcol">
                            @Html.LabelFor(model => model.ServerType.Desc, htmlAttributes: new { @class = "mylabel" })
                        </div>
                        <div class="mygroupcol">
                            @Html.EditorFor(model => model.ServerType.Desc, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="mygroupcol">
                            @Html.ValidationMessageFor(model => model.ServerType.Desc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="myform-group">
                        <div class="mygroupcol">
                            @Html.LabelFor(model => model.ServerType.price, htmlAttributes: new { @class = "mylabel" })
                        </div>
                        <div class="mygroupcol">
                            @Html.EditorFor(model => model.ServerType.price, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="mygroupcol">
                            @Html.ValidationMessageFor(model => model.ServerType.price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="myform-group">
                        <div class="mygroupcol">
                            @Html.LabelFor(model => model.WorkflowName, htmlAttributes: new { @class = "mylabel" })
                        </div>
                        <div class="mygroupcol">
                            @Html.DropDownListFor(model => model.SelectedWFID, Model.WorkFlowGroups, new { style = "width:100px" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="divServerInnerDivCommon" style="text-align: center;width:90% ">
                <div>
                    @Html.Action("SketchMapIndex", "SketchMap", new { ServiceTypeID = @Model.ServerType.ID })
                </div>
                <div class="divCommonSubmit">
                    <input type="submit" value="保存" class="btn btn-primary btn-submit-op" />
                    <a class="btn btn-primary btn-action-op" href="@Model.ReturnUrl">返回</a>
                </div>
            </div>
        }

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>