@model MedicalTechnology.ServicePlatform.Website.Models.ContactsListViewModel

@{
    ViewBag.Title = "联系人列表";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}
@Styles.Render("~/Content/main/css")
<link rel="stylesheet" type="text/css" href="~/Content/User.css">
<script type="text/javascript" src="~/Scripts/ServiceType.js"></script>
<div class="usercontent">
    <div id="divUserList">
        <div class="divtitle divtitle-common">
            <p class="titleinfo serverlist">联系人信息</p><div class="divcontrolsw"><img src="~/Content/images/素材01 (18).png" /></div>
        </div>
        <div id="divserverlistinfo">
            <div style="text-align:left;">
                @Html.ActionLink("新增", "Create", "FrequentContacts", new { }, new { target = "view_frame", @class = "btn btn-primary btn-action-op" })
            </div>
            <table class="divlisttable">
                <thead>
                    <tr>
                        <th style="width:100px;min-width:100px;">
                            @Html.DisplayNameFor(model => model.ContactsModel.ContactPerson.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactsModel.ContactPerson.SexDesc)
                        </th>
                        <th style="width:150px;min-width:100px;">
                            @Html.DisplayNameFor(model => model.ContactsModel.ContactPerson.Organization.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactsModel.ContactPerson.Cellphone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactsModel.ContactPerson.Officephone)
                        </th>
                        <th style="width:150px;min-width:100px;">
                            @Html.DisplayNameFor(model => model.ContactsModel.ContactPerson.eEmail)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var itemindex = 0;
                        foreach (var item in Model.ContactPersons)
                        {
                            itemindex++;
                            var alt = itemindex % 2 == 0 ? "alt" : "";
                            <tr class=@alt>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SexDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Organization.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cellphone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Officephone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.eEmail)
                                </td>
                                <td>
                                    @Html.ActionLink("编辑", "Edit", new { ID = item.ID }) |
                                    @Html.ActionLink("详情", "Details", new { ID = item.ID }) |
                                    @Html.ActionLink("删除", "Delete", new { ID = item.ID })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="10">
                            @Html.PageLinks(Model.PagingInfo, x => Url.Action("ContactsList", new { page = x }),
                                 Url.Content("~/Content/images/素材01 (27).png"), Url.Content("~/Content/images/素材01 (28).png"))
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>